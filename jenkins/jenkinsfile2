pipeline {
    agent none
    stages {
        stage("Android") {
            agent {
                label "Android"
            }
            steps {
                script {
                    cleanNode()
                }
            }
        }
    }
}

def cleanNode() {
   
 sh 'set +x'
 sh 'ls  /home/jenkins/workspace'
sh 'find '/Users/jenkins/workspace' -type d -depth 0 -ctime +2 -exec rm -rf {} + '
sh 'ls  /home/jenkins/workspace'
       sh 'set -x'
   
}
